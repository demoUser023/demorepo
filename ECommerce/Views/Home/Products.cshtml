@model List<ECommerce.Models.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Products";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<style>
    #message {
        position: relative;
        z-index: 10;
    }

        #message.fade-out {
            opacity: 0;
            transition: opacity 0.8s ease;
        }
</style>
<section class="py-5">
    <div class="container">
        <!-- HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <!-- LEFT: Title -->
            <h2 class="m-0">Our Products</h2>
            <!-- RIGHT: Buttons -->
            <div class="d-flex gap-2">
                <a asp-controller="Home"
                   asp-action="DeleteAllProducts"
                   class="btn btn-danger"
                   onclick="return confirm('Are you sure you want to delete ALL products? This action cannot be undone.');">
                    Delete All
                </a>
                <a asp-controller="Home"
                   asp-action="CreateProduct"
                   class="btn btn-primary">
                    + Add Product
                </a>
            </div>
        </div>

        <!-- SUCCESS MESSAGE (Near Products) -->
        @if (TempData["Success"] != null)
        {
            <div id="message"
                 class="alert alert-success alert-dismissible fade show mb-4"
                 role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- PRODUCTS -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <!-- Product Image -->
                        <img src="@(!string.IsNullOrEmpty(product.PImage) ? product.PImage : "https://via.placeholder.com/300")"
                             class="card-img-top"
                             alt="@product.PName">
                        <div class="card-body">
                            <h5 class="card-title">@product.PName</h5>
                            <p class="card-text text-muted">@product.Product_Desc</p>
                        </div>

                        <div><p>@product.PId</p></div>

                        <!-- Footer with Price + Buttons -->
                        <div class="card-footer d-flex justify-content-between align-items-center">
                            <span class="fw-bold">Rs. @product.Price</span>
                            <div class="btn-group">
                                <!-- Edit Button -->
                                <a asp-controller="Home"
                                   asp-action="EditProduct"
                                   asp-route-id="@product.PId"
                                   class="btn btn-sm btn-warning">
                                    Edit
                                </a>
                                <!-- Delete Button -->
                                <a  asp-controller="Home"
                                   asp-action="DeleteProduct"
                                   asp-route-id="@product.PId"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Are you sure you want to delete this product?');">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <!-- If no products -->
        @if (!Model.Any())
        {
            <div class="alert alert-info mt-4 text-center">
                No products available at the moment.
            </div>
        }
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const msg = document.getElementById("message");
        if (!msg) return;
        setTimeout(() => {
            msg.style.transition = "opacity 0.8s ease";
            msg.style.opacity = "0";
            setTimeout(() => msg.remove(), 800);
        }, 3000);
    });
</script>